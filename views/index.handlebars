<h1>Burgers!</h1>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Desired:</label>
    <input type="text" id="burg" name="name">
    <button type="submit">Add Burger</button>
  </div>

  
</form>

<div class="showBurgers">

  <div class="uneaten">
    {{#each burgers}}
      {{#unless devoured}}
        {{> burgers/burger-block eaten=true}}
      {{/unless}}
    {{/each}}
  </div>

</div>

<div class="eaten">
  <h2>DEVOURED</h2>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block eaten=false}}
    {{/if}}
  {{/each}}
</div>
