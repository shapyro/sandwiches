<h1>Burgers!</h1>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Fillins:</label>
    <input type="text" id="sandwich" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>

<div class="showBurgers">

<ul>
  {{#each burgers}}
    {{#unless eaten}}
      {{!-- {{> cats/cat-block sleep=true}} --}}
    {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each burgers}}
    {{#if notEaten}}
      {{!-- {{> cats/cat-block sleep=false}} --}}
    {{/if}}
  {{/each}}
</ul>

</div>
